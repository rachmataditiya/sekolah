<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data>
    <!-- Assign Roll Number Wizard Form View  -->
    <record id="view_move_standards_form" model="ir.ui.view">
        <field name="name">move_standards.form</field>
        <field name="model">move.standards</field>
        <field name="arch" type="xml">
            <form string="Pindah kelas">
                    <group>
                        <field name="academic_year_id" placeholder="Masukan Tahun Pelajaran" widget="selection"/>
                    </group>
                    <footer>
                        <button class="btn btn-sm btn-default fa fa-ban" special="cancel" string="Tutup"/>
                        <button class="btn btn-sm btn-default fa fa-plus" name="move_start" string="Pindahkan" type="object"/>
                    </footer>
           </form>
        </field>
    </record>
    
    <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_move_standards_form" model="ir.actions.act_window">
        <field name="name">Pindah Kelas</field>
        <field name="res_model">move.standards</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_move_standards_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem id="menu_move_standards_form" name="Pindahkan Kelas" parent="menu_configuration" action="action_move_standards_form" />
</data>
</odoo>
